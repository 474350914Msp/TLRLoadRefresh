<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:uiloader="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="XXXXXXXXXXX"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"/>

    <com.think.tlr.TLRLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        uiloader:enableLoad="true"
        uiloader:enableRefresh="true"
        uiloader:keepFootLoading="false"
        uiloader:keepContentLayout="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="I'm Header"
            android:textSize="18sp"
            uiloader:label="head"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            uiloader:label="content">

            <TextView
                android:id="@+id/contentHead"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/holo_green_light"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="I'm Content Head"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Content"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@id/contentHead"
                android:background="@android:color/holo_blue_light"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="I'm Footer"
            android:textSize="18sp"
            uiloader:label="foot"/>


    </com.think.tlr.TLRLinearLayout>
</LinearLayout>